<h1>Locations</h1>

<table class="table table-borderless table-hover table-info rounded">
      <thead class="table-primary rounded">
        <tr>
          <th>City</th>
          <th>Latitude</th>
          <th>Longitude</th>
          <th> </th>
        </tr>
      </thead>


  <tbody>
    <% @locations.each do |location| %>
        <tr>
          <td> <%= link_to location.address, location, class:"btn btn-info" %> </td>
          <td>
            <%= location.latitude %>
          </td>

        <td>
          <%= location.longitude %>
        </td>
        <td>
          <%= link_to "Destroy this location", @location, method: :delete, form: { data: { turbo_confirm: "Are you sure?" }}, class:"btn btn-outline-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New location", new_location_path, class:"btn btn-dark" %>
