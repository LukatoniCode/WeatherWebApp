<div>
  <%= link_to "Edit this location", edit_location_path(@location), class:"btn glass-btn" %> |
  <%= link_to "Back to locations", locations_path, class:"btn glass-btn" %>

  <p>
    
  </p>

  <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Delete this location
  </button>

  <!-- Modal -->
  <div class="glassdngr modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">Delete warning</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure?
        </div>
        <div class="modal-footer">
          <%= button_to "Delete this location", @location, method: :delete, class:"btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>

</div>
