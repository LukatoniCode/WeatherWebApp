<%= form_with(model: location) do |form| %>
  <% if location.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(location.errors.count, "error") %> prohibited this location from being saved:</h2>

      <ul>
        <% location.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col">
      <div class="form-floating mb-3">
        <%= form.text_field :address, class: "form-control", placeholder: "first name", id: "floatingInput" %>
        <%= form.label :address, style: "display: block", for: "floatingInput" %>
      </div>
    </div>

    <div class="col">
      <div class="form-floating mb-3">
        <%= form.text_field :latitude, class: "form-control", placeholder: "first name", id: "floatingInput", type: :hidden %>
      </div>
    </div>

    <div class="form-floating mb-3">
      <%= form.text_field :longitude, class: "form-control", placeholder: "first name", id: "floatingInput", type: :hidden %>
    </div>

    <div>
      <%= form.submit class: "btn btn-dark" %>
    </div>
<% end %>
